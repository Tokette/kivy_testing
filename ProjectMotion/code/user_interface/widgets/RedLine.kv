<RedLineWidget>:
	canvas:
		Color: 
			rgba: 1, 0, 0, 1
			
        Rectangle:
			pos: self.center_x - 15, 0
			size: 30, self.height
		
	Label:
		text: "Red Line"
		font_size: 50
		center_x: root.center_x / 2
		center_y: root.top / 3
	
	# Alewife
	Button:
		pos_hint: {'center_x': .5, 'center_y': .95}
		on_release: root.ChangeWidget('TransitDisplay', ('Subway', 'Red', 'Alewife'))
		background_normal: 'code/user_interface/widgets/SelectBox_Idle.jpg'
		background_Down: 'code/user_interface/widgets/SelectBox_Selected.jpg'
		size_hint: (None, None)
		size: (30, 30)
		Label:
			text: "Alewife"
			pos_x: root.x + 20
		
